# ----------------------- ALIAS ----------------------------------------------

# Programas
alias zlib='~/Programas/Z-Library-3.0.0/Z-Library'

# Entornos
alias py="python3.14"
alias addvenv="python3.14 -m venv .venv"
alias venv="source ./.venv/bin/activate"

# Atajos
alias cathome='cat ~/.zshrc'
alias viewhome='bat ~/.zshrc'
alias edithome='nvim ~/.zshrc'
alias editscreen='nvim ~/screen.sh'

alias sshhome='cd ~/.ssh'
alias wtfvim='glow ~/apuntes-vim.md'

alias apuntes='nvim ~/Documentos/apuntes/'
alias proy='cd ~/Proyectos/'

alias ls='lsd'

alias logout='pkill -TERM -u "$USER"'
alias off='systemctl poweroff'
